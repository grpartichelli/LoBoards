<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".AboutActivity">


    <TextView
            android:id="@+id/aboutTitle"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:labelFor="@id/replayList"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="5dp"
            android:textSize="24sp"
            android:text="Sobre o LoBoards:"
            android:textStyle="bold"
    />

    <LinearLayout
            android:paddingHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
    >
    <TextView
            android:id="@+id/creatorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Aplicativo construído por Gabriel Rizzolli Partichelli para o projeto de extensão LoBoGames. "
            android:textSize="20sp" />

        <TextView
                android:id="@+id/creatorText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código e teoria baseado no aplicativo LoBoGames de Marco Antônio Vieira."
                android:textSize="20sp" />


    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="100"
    />



    <Button
            android:id="@+id/linkButton2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:padding="0dp"
            android:text="Baixe o aplicativo LoBoGames"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#0915F6"
            android:textSize="20sp"
            app:backgroundTint="#00FFFFFF"
            android:layout_marginBottom="5dp"/>


        <Button
                android:id="@+id/linkButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:padding="0dp"
                android:text="Visite o site do projeto LoBoGames"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#0915F6"
                android:textSize="20sp"
                app:backgroundTint="#00FFFFFF" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="100"
            />

    <TextView
            android:id="@+id/contactText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Contato:\ngabriel.partichelli@inf.ufrgs.br"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="14sp" />

    </LinearLayout>
    <Button
            android:id="@+id/back"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Voltar"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="30dp"
    />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical"
              android:orientation="vertical"
              tools:context=".PreBoardActivity">


    <TextView
            android:id="@+id/boardListLabel"
            android:paddingTop="40dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:labelFor="@id/replayList"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:text="Selecionar Replay:"/>

    <ListView
            android:id="@+id/replayList"
            android:paddingVertical="20dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:divider="#000"
            android:dividerHeight="2px"
            android:listSelector="#0f0"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
    />

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"

    >
        <Button
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Replay"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
        />

        <Button
                android:id="@+id/importReplay"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Importar Replay"
                android:textSize="20sp"
        />
    </LinearLayout>



</LinearLayout>
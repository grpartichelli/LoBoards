<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical"
              android:orientation="vertical"
              tools:context=".GameActivity">

    <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:textSize="24sp"
            android:paddingTop="30dp"
            android:layout_weight="0"
    />

    <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:textSize="20sp"
            android:paddingVertical="10dp"
            android:layout_weight="0"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:id="@+id/buttonsLayout"
    >
        <com.marcoantonioaav.lobogames.ui.BoardView
                android:id="@+id/boardView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FF00FF00"
        />
    </RelativeLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone"
    >
        <Button
                android:id="@+id/replay"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:contentDescription="Visualizar Replay"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="Visualizar\nReplay"
                android:textSize="16sp"
                android:visibility="visible"
        />

        <Button
                android:id="@+id/replayTest"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:contentDescription="Salvar Replay"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="Salvar\nReplay"
                android:textSize="16sp"
                android:visibility="visible"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone"

    >
        <Button

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:contentDescription="Visualizar Replay"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="Visualizar\nReplay"
                android:textSize="16sp"
                android:visibility="visible"
        />

        <Button

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:contentDescription="Salvar Replay"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="Salvar\nReplay"
                android:textSize="16sp"
                android:visibility="visible"
        />
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone"

    >
        <Button
                android:id="@+id/playAgain"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:contentDescription="Recomeçar jogo"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="Recomeçar\nJogo"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
        />

        <Button
                android:id="@+id/back"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:contentDescription="Voltar ao menu"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="2dp"
                android:text="Voltar\nao menu"
                android:textSize="16sp"
                android:visibility="visible"
                android:layout_marginBottom="24dp"
        />
    </LinearLayout>

</LinearLayout>
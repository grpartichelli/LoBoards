<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical"
              android:orientation="vertical"
              tools:context=".GameActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="20dp"
    >

        <TextView
                android:id="@+id/gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Name"
                android:textSize="24sp"
                android:layout_weight="0"
        />

        <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="20sp"
                android:layout_weight="0"
        />
    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:id="@+id/buttonsLayout"
            android:gravity="center_horizontal|center_vertical"
    >
        <com.marcoantonioaav.lobogames.ui.BoardView
                android:id="@+id/boardView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        />
    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:padding="20dp"
    >

        <LinearLayout
                android:id="@+id/replayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <Button
                    android:id="@+id/replay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="16sp"
                    android:contentDescription="Visualizar Replay"
                    android:text="Visualizar\nReplay"
                    android:layout_marginRight="15dp"
            />

            <Button
                    android:id="@+id/replayTest"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:contentDescription="Salvar Replay"
                    android:text="Salvar\nReplay"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <Button
                    android:id="@+id/playAgain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="16sp"
                    android:contentDescription="Recomeçar jogo"
                    android:text="Recomeçar\nJogo"
                    android:layout_marginRight="15dp"/>

            <Button
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="16sp"
                    android:contentDescription="Voltar ao menu"
                    android:text="Voltar\nao menu"
                    android:visibility="visible"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>